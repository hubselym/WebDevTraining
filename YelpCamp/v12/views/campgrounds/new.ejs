<% include ../partials/header %>

<div class="container">
    <div class="row">
        
        
        <!--DON"T USER INLINE STYLES!!! (fixed in next version)-->
        <h1 style="text-align: center;">Create a New Campground</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <!--form-group groups things together in a form and provides a little space-->
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name">
                </div>
                <div class="form-group">
                    <!--step will give the input controls to increase value by .01-->
                    <input class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="description">
                </div>
                <div class="form-group">
                    <!--btn-block makes the button a block element that fills the container-->
                    <!--btn-primary makes it blue (primary color)-->
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
                </div>
            </form>
            
            <a href="/campgrounds">Go Back</a>
        </div>
        
        
    </div>
</div>

<% include ../partials/footer %>